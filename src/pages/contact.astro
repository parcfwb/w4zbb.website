---
import MainLayout from '../layouts/MainLayout.astro';
---

<style>

    .addresses { display: flex; gap: 1rem; }
    .google-map { display: block; height: 400px; }

    @media screen and (min-width: 700px) {
        .addresses { flex-direction: row; flex-basis: 100%; }
    }

</style>

<MainLayout title = "PARC - Contact">

    <main>
        <section>
            <h1 class="pt1-5">How To Reach Us</h1>

            <div class="address">
                <!-- Address Cards -->
                <div>
                    <div class="card mb1">
                        <ul class="no-list-style">
                            <li>Mailing address:</li>
                            <li>PARC</li>
                            <li>P.O. Box 873</li>
                            <li>Fort Walton Beach, FL 32549</li>
                        </ul>
                    </div>
                    <div class="card">
                        <ul class="no-list-style">
                            <li>Clubhouse located at:</li>
                            <li>17 First St SE, Unit C</li>
                            <li>Fort Walton Beach, FL 32548</li>
                        </ul>
                    </div>
                </div>

                <!-- forms -->
                <div>
                    <p>Email: <a href="mailto:parcfwb@gmail.com">parcfwb@gmail.com</a></p>

                    <p>Donations are greatly appreciated and can be made via:</p>

                    <!-- Donation form -->
                    <form class="pb1" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                        <input type="hidden" name="cmd" value="_s-xclick">
                        <input type="hidden" name="hosted_button_id" value="ZG89KVKCEBQ8E">

                        <input type="image" 
                               src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif"
                               name="submit" 
                               alt="PayPal - The safer, easier way to pay online!">
                        <img alt="" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                    </form>
                </div>

            </div>

            <!-- Google Map-->
            <div class="google-map">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3441.078461042912!2d-86.61302284813969!3d30.40551570828797!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88913f253280a6f1%3A0x9424b074447d78a7!2s17%20First%20St%20SE%2C%20Fort%20Walton%20Beach%2C%20FL%2032548!5e0!3m2!1sen!2sus!4v1640896474103!5m2!1sen!2sus"
                    width="100%" 
                    height="100%" 
                    allowfullscreen="" 
                    loading="lazy">
                </iframe>
            </div>

            <!-- Small link for street view -->
            <div class="pt1 pb1 text-center">
                <a target="_blank"
                    href="https://www.google.com/maps/preview/@30.405469,-86.611279,3a,75y,74.26h,85.98t/data=!3m4!1e1!3m2!1s87gXNLxPTUuovL7u0GNIVA!2e0">
                    <small>Street View</small>
                </a>
            </div>

        </section>

    </main>
</MainLayout>
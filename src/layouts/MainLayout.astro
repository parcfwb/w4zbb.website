---
let {title} = Astro.props;
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	
	<link rel="stylesheet" href={Astro.resolve('../styles/base.css')}>
	<link rel="stylesheet" href={Astro.resolve('../styles/style.css')}>

</head>
<body>
    <header class="container">

        <div class="banner">
            <div class="banner-title">
                <h1 class="radio">W4ZBB</h1>
                <div>
                    <h2>Playground Amateur Radion Club</h2>
                    <h2 id="morse" class="morse">W4ZBB</h2>
                </div>
            </div>

            <div class="logos">
                <img src="/assets/images/parc_logo.png" alt="PARC Logo" title="Playground Amateur Radio Club">
                <a href="http://www.arrl.org/ares" target="_blank">
                    <img src="/assets/images/ares_logo.png" alt="ARES Logo" title="Amateur Radio Emergency Service">
                </a>
                <a href="http://www.arrl.org" target="_blank">
                    <img class="arrl-logo" src="/assets/images/arrl_logo.png" alt="ARRL logo" title="ARRL Home Page">
                </a>

            </div>
        </div>

        <div class="menu-button">
            <button>Menu</button>
        </div>

        <nav id="main-nav" class="hidden">
            <ul>
                <li><a href="/">Home</a></li>
            </ul>
        </nav>
   
    </header>

    <slot></slot>

    <footer class="container">
        <div class="footer-paragraphs">
            <p><small>&copy; 2022 (PARC) &middot; Playground Amateur Radio Club &middot; Fort Walton Beach, Florida 32548 &middot; Grid EM60qj</small></p>
            <p class="pt05"><small>PARC is a 501(c)3 Public Charity</small></p>
        </div>
    </footer>

    <script>

        const nav = document.querySelector("nav")
        const menuButton = document.querySelector(".menu-button button");

        window.addEventListener("load", () => {
            if (window.innerWidth < 700) {
                nav.classList.add("hidden")
            }
            else {
                nav.classList.remove("hidden")
            }
        })

        window.addEventListener("resize", () => {
            if (window.innerWidth > 700) {
                nav.classList.remove("hidden")
            }
            else {
                nav.classList.add("hidden")
            }
        })

        menuButton.addEventListener("click", () => { nav.classList.toggle("hidden") })

    </script>

</body>
</html>